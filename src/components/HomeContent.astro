---
import { Image } from 'astro:assets';
import ContentCard from './ContentCard.astro';
import { useTranslations, localize, getLocalizedPath } from '../i18n/utils';
import { profile, publications as pubsData } from '../utils/data';
import { getIconPath } from '../utils/icons';
import profileImage from '../images/profile.png';

interface Props {
  lang: 'en' | 'ja';
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// 最新3件の業績
const recentPubs = pubsData.items.slice(0, 3);
const researchInterests = profile.research_interests || [];
---

<!-- ヒーローセクション -->
<section class="mb-16">
  <div class="flex flex-col md:flex-row gap-8 items-start">
    <!-- プロフィール写真 -->
    <div class="flex-shrink-0">
      <Image
        src={profileImage}
        alt={localize(profile.name, lang)}
        class="w-32 h-32 rounded-2xl shadow-lg object-cover"
        width={256}
        height={256}
        quality={100}
      />
      <!-- ソーシャルリンクアイコン -->
      <div class="flex items-center justify-center gap-2 mt-3">
        {profile.contact.github && (
          <a
            href={`https://github.com/${profile.contact.github}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-1.5 text-primary-400 dark:text-primary-500 hover:text-accent dark:hover:text-accent-light transition-colors"
            aria-label="GitHub"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" />
            </svg>
          </a>
        )}
        {profile.contact.google_scholar && (
          <a
            href={profile.contact.google_scholar}
            target="_blank"
            rel="noopener noreferrer"
            class="p-1.5 text-primary-400 dark:text-primary-500 hover:text-accent dark:hover:text-accent-light transition-colors"
            aria-label="Google Scholar"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 24a7 7 0 110-14 7 7 0 010 14zm0-24L0 9.5l4.838 3.94A8 8 0 0112 9a8 8 0 017.162 4.44L24 9.5 12 0z" />
            </svg>
          </a>
        )}
        {profile.contact.orcid && (
          <a
            href={`https://orcid.org/${profile.contact.orcid}`}
            target="_blank"
            rel="noopener noreferrer"
            class="p-1.5 text-primary-400 dark:text-primary-500 hover:text-accent dark:hover:text-accent-light transition-colors"
            aria-label="ORCID"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.947s-.422.947-.947.947a.95.95 0 01-.947-.947c0-.525.422-.947.947-.947zm-.722 3.038h1.444v10.041H6.647V7.416zm3.562 0h3.9c3.712 0 5.344 2.653 5.344 5.025 0 2.578-2.016 5.025-5.325 5.025h-3.919V7.416zm1.444 1.303v7.444h2.297c3.272 0 4.022-2.484 4.022-3.722 0-2.016-1.284-3.722-4.097-3.722h-2.222z" />
            </svg>
          </a>
        )}
        {profile.contact.arxiv && (
          <a
            href={profile.contact.arxiv}
            target="_blank"
            rel="noopener noreferrer"
            class="p-1.5 text-primary-400 dark:text-primary-500 hover:text-accent dark:hover:text-accent-light transition-colors"
            aria-label="arXiv"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3.8423 0a1.0037 1.0037 0 0 0-.922.6078c-.1536.3687-.0438.6275.2938 1.1113l6.9185 8.3597-1.0223 1.1058a1.0393 1.0393 0 0 0 .003 1.4229l1.2292 1.3135-5.4391 6.4444c-.2803.299-.4538.823-.2971 1.1986a1.0253 1.0253 0 0 0 .9585.635.9133.9133 0 0 0 .6891-.3405l5.783-6.126 7.4902 8.0051a.8527.8527 0 0 0 .6835.2597.9575.9575 0 0 0 .8777-.6138c.1577-.377-.017-.7502-.306-1.1407l-7.0518-8.3418 1.0632-1.13a.9626.9626 0 0 0 .0089-1.3165L4.6336.4639s-.3733-.4535-.768-.463zm0 .272h.0166c.2179.0052.4874.2715.5644.3639l.005.006.0052.0055 10.169 10.9905a.6915.6915 0 0 1-.0072.945l-1.0666 1.133-1.4982-1.7724-8.5994-10.39c-.3286-.472-.352-.6183-.2592-.841a.7307.7307 0 0 1 .6704-.4401zm14.341 1.5701a.877.877 0 0 0-.6554.2418l-5.6962 6.1584 1.6944 1.8319 5.3089-6.5138c.3251-.4335.479-.6603.3247-1.0292a1.1205 1.1205 0 0 0-.9763-.689zm-7.6557 12.2823 1.3186 1.4135-5.7864 6.1295a.6494.6494 0 0 1-.4959.26.7516.7516 0 0 1-.706-.4669c-.1119-.2682.0359-.6864.2442-.9083l.0051-.0055.0047-.0055z" />
            </svg>
          </a>
        )}
      </div>
    </div>

    <!-- 自己紹介 -->
    <div class="flex-1">
      <h1 class="font-serif text-4xl md:text-5xl font-bold text-primary-900 dark:text-primary-50 mb-2">
        {localize(profile.name, lang)}
      </h1>
      <p class="text-xl text-primary-500 dark:text-primary-400 mb-4">
        {localize(profile.title, lang)} · {localize(profile.affiliation, lang)}
      </p>
      <div class="prose prose-primary max-w-none">
        <p class="text-primary-600 dark:text-primary-300 leading-relaxed">
          {localize(profile.bio, lang)}
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Affiliation & Contact Section -->
<section class="mb-16">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Affiliation -->
    <div class="bg-white dark:bg-primary-800 p-5 rounded-xl border border-primary-100 dark:border-primary-700">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 w-7 h-7 bg-teal-100 dark:bg-teal-900/30 rounded-md flex items-center justify-center mt-0.5">
          <svg class="w-4 h-4 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIconPath('affiliation')} />
          </svg>
        </div>
        <div>
          <p class="text-sm text-primary-500 dark:text-primary-400">{t('ui.affiliation')}</p>
          <p class="text-primary-700 dark:text-primary-200">{localize(profile.affiliation, lang)}</p>
        </div>
      </div>
    </div>
    <!-- Contact -->
    <div class="bg-white dark:bg-primary-800 p-5 rounded-xl border border-primary-100 dark:border-primary-700">
      <div class="flex items-start gap-3">
        <div class="flex-shrink-0 w-7 h-7 bg-teal-100 dark:bg-teal-900/30 rounded-md flex items-center justify-center mt-0.5">
          <svg class="w-4 h-4 text-teal-600 dark:text-teal-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIconPath('email')} />
          </svg>
        </div>
        <div>
          <p class="text-sm text-primary-500 dark:text-primary-400">{t('ui.email')}</p>
          <p class="text-primary-700 dark:text-primary-200">{profile.contact.email}</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- 研究分野セクション -->
<section class="mb-16">
  <h2 class="font-serif text-2xl font-semibold text-primary-900 dark:text-primary-50 mb-6 flex items-center gap-3">
    <span class="w-8 h-1 bg-accent rounded-full"></span>
    {t('section.researchInterests')}
  </h2>
  <div class="grid gap-4">
    {researchInterests.map((interest: any) => (
      <ContentCard
        title={localize(interest.title, lang)}
        icon={interest.icon || 'lightbulb'}
        description={interest.description ? localize(interest.description, lang) : undefined}
      />
    ))}
  </div>
</section>

<!-- 最新の業績 -->
<section>
  <div class="flex items-center justify-between mb-6">
    <h2 class="font-serif text-2xl font-semibold text-primary-900 dark:text-primary-50 flex items-center gap-3">
      <span class="w-8 h-1 bg-accent rounded-full"></span>
      {t('section.recentPublications')}
    </h2>
    <a href={getLocalizedPath('/publications', lang)} class="text-sm text-accent hover:text-accent-dark dark:hover:text-accent-dark transition-colors flex items-center gap-1">
      {t('ui.viewAll')}
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={getIconPath('chevronRight')} />
      </svg>
    </a>
  </div>

  <div class="grid gap-4">
    {recentPubs.map((pub: any) => (
      <ContentCard
        title={pub.title}
        authors={pub.authors}
        year={pub.year}
        venue={pub.venue}
        links={pub.links}
        abstract={pub.abstract}
      />
    ))}
  </div>
</section>
