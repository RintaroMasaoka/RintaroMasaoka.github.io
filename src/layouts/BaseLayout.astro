---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import type { Lang } from '../i18n/utils';

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
  image?: string;
}

const { title, description, lang = 'en', image } = Astro.props;

// 言語別のデフォルト説明文
const defaultDescription = lang === 'ja'
  ? '政岡凜太郎のウェブサイト。物性理論・統計物理学を専攻する東京大学の大学院生です。量子相転移と共形場理論を研究しています。'
  : 'Rintaro Masaoka\'s website. A graduate student at the University of Tokyo specializing in condensed matter theory and statistical physics, researching quantum phase transitions and conformal field theory.';

const siteUrl = 'https://rintaromasaoka.github.io';
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = image ? new URL(image, siteUrl).href : `${siteUrl}/profile.png`;
const metaDescription = description || defaultDescription;

// 構造化データ（JSON-LD）
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": lang === 'ja' ? "政岡 凜太郎" : "Rintaro Masaoka",
  "url": siteUrl,
  "image": `${siteUrl}/profile.png`,
  "jobTitle": lang === 'ja' ? "修士課程" : "Master's Student",
  "worksFor": {
    "@type": "Organization",
    "name": lang === 'ja' ? "東京大学" : "University of Tokyo"
  },
  "alumniOf": {
    "@type": "Organization",
    "name": lang === 'ja' ? "東京大学" : "University of Tokyo"
  },
  "sameAs": [
    "https://scholar.google.com/citations?user=qoSWWasAAAAJ",
    "https://orcid.org/0009-0002-4280-9783"
  ]
};
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={metaDescription} />
  <link rel="icon" type="image/jpeg" href="/favicon.jpeg" />
  <title>{title}</title>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={currentUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={metaDescription} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content={lang === 'ja' ? 'ja_JP' : 'en_US'} />
  <meta property="og:site_name" content={lang === 'ja' ? '政岡 凜太郎 | Rintaro Masaoka' : 'Rintaro Masaoka | 政岡 凜太郎'} />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={metaDescription} />
  <meta name="twitter:image" content={ogImage} />

  <!-- 構造化データ (JSON-LD) -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

  <!-- Canonical URL -->
  <link rel="canonical" href={currentUrl} />

  <!-- 言語alternateリンク -->
  <link rel="alternate" hreflang="en" href={`${siteUrl}${Astro.url.pathname.replace('/ja/', '/').replace('/ja', '/')}`} />
  <link rel="alternate" hreflang="ja" href={`${siteUrl}/ja${Astro.url.pathname.replace('/ja/', '/').replace('/ja', '')}`} />
  <link rel="alternate" hreflang="x-default" href={`${siteUrl}${Astro.url.pathname.replace('/ja/', '/').replace('/ja', '/')}`} />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Source+Sans+3:wght@300;400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

  <!-- KaTeX CSS（数式用） -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" />

  <!-- テーマ初期化（FLASHを防ぐためにhead内で即時実行） -->
  <script is:inline>
    (function() {
      const theme = localStorage.getItem('theme');
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

      if (theme === 'dark' || (!theme && prefersDark)) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    })();

    // テーマ切り替え・モバイルメニュー用のイベントリスナー
    document.addEventListener('click', function(e) {
      var target = e.target;
      
      // theme-toggleボタンまたはその子要素をクリックした場合
      while (target && target !== document) {
        if (target.id === 'theme-toggle') {
          document.documentElement.classList.toggle('dark');
          var isDark = document.documentElement.classList.contains('dark');
          localStorage.setItem('theme', isDark ? 'dark' : 'light');
          return;
        }
        if (target.id === 'menu-toggle') {
          var mobileMenu = document.getElementById('mobile-menu');
          if (mobileMenu) mobileMenu.classList.toggle('hidden');
          return;
        }
        target = target.parentElement;
      }
    });
  </script>
</head>
<body class="min-h-screen bg-primary-50 dark:bg-primary-900 text-primary-800 dark:text-primary-100 font-sans transition-colors duration-300">
  <!-- 背景のサブトルなパターン -->
  <div class="fixed inset-0 -z-10 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cg fill=\'none\' fill-rule=\'evenodd\'%3E%3Cg fill=\'%23000000\' fill-opacity=\'1\'%3E%3Cpath d=\'M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');" />

  <Header lang={lang} />

  <main class="max-w-4xl mx-auto px-6 py-12">
    <slot />
  </main>

  <Footer lang={lang} />
</body>
</html>

<style is:global>
  /* スムーズスクロール */
  html {
    scroll-behavior: smooth;
  }

  /* 選択時のカラー */
  ::selection {
    background-color: rgba(13, 148, 136, 0.3);
    color: inherit;
  }

  /* KaTeX数式のスタイル調整 */
  .katex {
    font-size: 1.1em;
  }
</style>

<script>
  // Save language preference when page loads
  const currentLang = document.documentElement.lang;
  localStorage.setItem('preferredLang', currentLang);
</script>
