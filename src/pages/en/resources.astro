---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NoteCard from '../../components/NoteCard.astro';
import ToolCard from '../../components/ToolCard.astro';
import { useTranslations, localize } from '../../i18n/utils';
import { notes as notesData, tools as toolsData } from '../../utils/data';

const lang = 'en';
const t = useTranslations(lang);

// Notes list
const notes = notesData.notes;

// Tools list
const tools = toolsData.tools;

// Section definitions
const sections = [
  { id: 'notes', label: t('section.notes'), count: notes.length },
  { id: 'tools', label: t('section.tools'), count: tools.length },
];
---

<BaseLayout title={t('page.resources.title')} lang={lang}>
  <div class="mb-8">
    <h1 class="font-serif text-4xl font-bold text-primary-900 dark:text-primary-50 mb-2">{t('page.resources.title')}</h1>
    <p class="text-primary-500 dark:text-primary-400">{t('page.resources.description')}</p>
  </div>

  <!-- Section Navigation -->
  <nav class="mb-8 sticky top-16 bg-primary-50/80 dark:bg-primary-900/80 backdrop-blur-sm py-3 -mx-6 px-6 border-b border-primary-100 dark:border-primary-700">
    <ul class="flex flex-wrap gap-2">
      {sections.map((sec) => (
        <li>
          <a
            href={`#${sec.id}`}
            class="inline-block px-4 py-1.5 text-sm font-medium text-primary-600 dark:text-primary-300 bg-white dark:bg-primary-800 border border-primary-200 dark:border-primary-600 rounded-full hover:border-accent dark:hover:border-accent-light hover:text-accent dark:hover:text-accent-light transition-colors"
          >
            {sec.label}
            <span class="ml-1 text-xs text-primary-400 dark:text-primary-500">({sec.count})</span>
          </a>
        </li>
      ))}
    </ul>
  </nav>

  <!-- Notes Section -->
  <section id="notes" class="mb-12">
    <h2 class="font-serif text-2xl font-semibold text-primary-900 dark:text-primary-50 mb-6 flex items-center gap-3">
      <span class="w-6 h-1 bg-accent rounded-full"></span>
      {t('section.notes')}
    </h2>

    <!-- Notes List -->
    <div class="grid gap-4">
      {notes.map((note: any) => (
        <NoteCard
          title={localize(note.title, lang)}
          filename={note.filename}
          url={note.url}
          description={localize(note.description, lang)}
          tags={localize(note.tags, lang)}
          lang={lang}
        />
      ))}
    </div>
  </section>

  <!-- Tools Section -->
  <section id="tools">
    <h2 class="font-serif text-2xl font-semibold text-primary-900 dark:text-primary-50 mb-6 flex items-center gap-3">
      <span class="w-6 h-1 bg-accent rounded-full"></span>
      {t('section.tools')}
    </h2>
    <div class="grid gap-4">
      {tools.map((tool: any) => (
        <ToolCard
          title={localize(tool.title, lang)}
          url={tool.url}
          description={localize(tool.description, lang)}
          icon={tool.icon}
          color={tool.color}
        />
      ))}
    </div>
  </section>
</BaseLayout>
