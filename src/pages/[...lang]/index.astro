---
import BaseLayout from '../../layouts/BaseLayout.astro';
import HomeContent from '../../components/HomeContent.astro';
import { localize, type Lang } from '../../i18n/utils';
import { profile } from '../../utils/data';

export function getStaticPaths() {
  return [
    { params: { lang: undefined } },
    { params: { lang: 'ja' } },
  ];
}

const lang: Lang = (Astro.params.lang as Lang) || 'en';
const pageData = profile.page;
---

<BaseLayout title={`${localize(profile.name, lang)} | ${pageData.title[lang]}`} lang={lang}>
  <HomeContent lang={lang} />
</BaseLayout>
